<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="#1F1E1E"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/searchVideoThumbnails"
        android:layout_width="match_parent"
        android:layout_height="168dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/searchVideoTitle"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginRight="15dp"
            android:text="(현재 유행하는 신종사기 3가지!!)현관에 이런 택배/우편 있으면 무조건 신고하세요! 모르면 바로 당합니다..."
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/border_greyround"
            android:text="일치율 50%"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="게시일  "
            android:textColor="#FFFFFF"
            android:textSize="11dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/views"
            android:text="4.5천회"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />
    </LinearLayout>

</LinearLayout>